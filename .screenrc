# allow altscreen (Ex. vim will appear on separate screen)
altscreen on

# no welcome message
startup_message off

# mouse tracking allows to switch region focus by clicking
mousetrack on

# colors
attrcolor b ".I"
defbce on

# the following two lines give a two-line status, with the current window highlighted
hardstatus alwayslastline
hardstatus string '%{= kg}[%{G}%H%? %1`%?%{g}][%{G}%S%{g}][%= %{= kw}%-w%{+b yk} %n*%t%?(%u)%? %{-}%+w %=%{g}][%{B}%m/%d %{W}%C%A%{g}]'

# huge scrollback buffer
defscrollback 5000
